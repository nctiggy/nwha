{
  "name": "nwha",
  "version": "0.0.0",
  "description": "Never Work Hard Again - AI-powered autonomous development orchestrator",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "preflight": "./scripts/preflight.sh",
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "vitest run tests/unit --reporter=verbose",
    "test:integration": "vitest run tests/integration --reporter=verbose",
    "test:e2e": "playwright test",
    "test:all": "npm run test && npm run test:e2e",
    "test:coverage": "vitest run --coverage",
    "build:css": "tailwindcss -i ./public/css/input.css -o ./public/css/styles.css --minify",
    "lint": "eslint src tests --ext .js",
    "lint:fix": "eslint src tests --ext .js --fix",
    "db:init": "node src/db/init.js",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f nwha",
    "docker:health": "curl -f http://localhost:3000/health",
    "watch": "./scripts/watch-progress.sh",
    "prd:status": "jq '.userStories[] | {id, title, passes}' prd.json"
  },
  "dependencies": {
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/formbody": "^7.4.0",
    "@fastify/session": "^10.7.0",
    "@fastify/static": "^7.0.1",
    "better-sqlite3": "^11.3.0",
    "fastify": "^4.26.2",
    "node-pty": "^1.0.0",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "pino": "^8.19.0",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@vitest/coverage-v8": "^1.3.1",
    "eslint": "^8.57.0",
    "socket.io-client": "^4.8.3",
    "supertest": "^6.3.4",
    "tailwindcss": "^3.4.1",
    "vitest": "^1.3.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
